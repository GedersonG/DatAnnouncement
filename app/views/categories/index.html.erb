<div class="container text-center ">
  <h1><%= t('.title') %></h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col"><%= t('.name') %></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= link_to t('.edit'), edit_category_path(category), class: "btn btn-primary btn-sm" %></td>
              <td><%= button_to t('.destroy'), category_path(category), method: :delete, data: { confirm: t('.confirm', name: category.name) }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to t('.new'), new_category_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
