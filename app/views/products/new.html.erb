<%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |err| %>
        <div>
            <%= err %>
        </div>
    <% end %>
    <div class="mt-4">
        <%= form.label :titulo %>
        <%= form.text_field :title%>
    </div>
    <br>
    <div class="mt-4">
        <%= form.label :descripcion %>
        <%= form.text_area :description%>
    </div>
    <br>
    <div class="mt-4">
        <%= form.label :precio %>
        <%= form.number_field :price%>
    </div>

    <%= form.submit %>
<% end %>