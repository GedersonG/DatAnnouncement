<div>
  <%= t('.detail', username: @product.user.username) %>
</div>
<div>
    <%= image_tag @product.photo, width: 200 if @product.photo.attached? %>
    <h1 class="title"><%= @product.title %></h1>

    <h3> Descripcion: </h3><p class="description"><%= @product.description %> </p>

    <span class="price"> <%= @product.price %>$ </span>
</div>
<% if @product.owner? %>
  <%= link_to 'Editar producto', edit_product_path(@product) %>
  <%= link_to 'Eliminar producto', product_path(@product), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
  } %>
<% end %>

<%= link_to t('.view_more_products', username: @product.user.username), user_path(@product.user.username) %>

<% if Current.user %>
  <% if @product.favorite %>
    <%= link_to '🌟',  favorite_path(@product.id), data: {
      turbo_method: :delete
    } %>
  <% else %>
    <%= link_to '⭐',  favorites_path(product_id: @product.id), data: {
      turbo_method: :post
    } %>
  <% end %>
<% end %>